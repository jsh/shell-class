
# set up a pair of prompts -- one for success, one for failure
export _r="\[\e[01;31m\]"
export _g="\[\e[01;32m\]"
export _n="\[\e[0m\]"

prompt() {
  if [ $? = 0 ]; then
    PS1="\u@\h:\w${_g}\$${_n} "
  else
    PS1="\u@\h:\w${_r}\$${_n} "
  fi
}

export PROMPT_COMMAND=prompt

sprompt() {
  if [ $? = 0 ]; then
    PS1="\u@\h:\W${_g}\$${_n} "
  else
    PS1="\u@\h:\W${_r}\$${_n} "
  fi
}
